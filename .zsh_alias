# Example aliases
alias zshconfig="code ~/.zshrc"
alias ohmyzsh="code ~/.oh-my-zsh"
alias gitconfig="code ~/.gitconfig"

alias pgg="ping -c 3 www.google.fr"
alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE;killall Finder"
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE;killall Finder"

# ls, the common ones I use a lot shortened for rapid fire usage
alias l='ls -lFh'     #size,show type,human readable
alias la='ls -lAFh'   #long list,show almost all,show type,human readable
alias lr='ls -tRFh'   #sorted by date,recursive,show type,human readable
alias lt='ls -ltFh'   #long list,sorted by date,show type,human readable
alias ll='ls -l'      #long list
alias ldot='ls -ld .*'
alias lS='ls -1FSsh'
alias lart='ls -1Fcart'
alias lrt='ls -1Fcrt'

#df aliases
alias sdf="df -P | awk '0+$5 >= 80 {print}'"

alias grep='grep --color'
alias sgrep='grep -R -n -H -C 5 --exclude-dir={.git,.svn,CVS} '

alias dud='/usr/bin/du -d 1 -h'
alias duf='/usr/bin/du -sh *'
alias dum='/usr/bin/du -hcs ./* | gsort -h'
alias fid='find . -type d -name'
alias fif='find . -type f -name'

alias h='history'
alias hgrep="fc -El 0 | grep"
alias help='man'
alias p='ps -f'
alias sortnr='sort -n -r'
alias unexport='unset'
alias ..='cd ..'
alias ...="cd ../.."
alias c='clear'
alias ssh-nocheck='ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no'

export LESS='-R'
export LESSOPEN='|~/.lessfilter %s'

alias journal='code /Volumes/HOME/blocnotes/Notes/$(date +%F)'
alias cat='bat'
alias ping='prettyping --nolegend'
alias top='sudo htop'
alias du='ncdu --color dark -rr -x --exclude .git --exclude node_modules'
alias help='tldr'

